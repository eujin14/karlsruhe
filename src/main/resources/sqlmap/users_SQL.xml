<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">

	<insert id="create" parameterType="hashMap">
	<![CDATA[
		INSERT INTO users
		(username, password, authority, enabled, uname,  utel, uemail, uaddr)
		VALUES
		(#{username}, #{password}, "ROLE_USER", "1", #{uname}, #{utel}, #{uemail}, #{uaddr})
	]]>
	</insert>
	
	<select id="memberList" resultType="hashMap">
	<![CDATA[
		SELECT * FROM 
			users
	]]>
	</select>

	<select id="memberDetail" resultType="com.karlsruhe.users.UsersDTO">
	<![CDATA[
		SELECT * FROM 
			users
		WHERE 
			username = #{username}
	]]>
	</select>

	<update id="memberUpdate" parameterType="hashMap">
	<![CDATA[
		UPDATE users 
			SET
		password = #{password},
		uname = #{uname},
		utel = #{utel},
		uemail = #{uemail}, 
		uaddr = #{uaddr}
			WHERE
		username = #{username}
	]]>
	</update>
	
		<update id="updatePasswordUsers" parameterType="hashMap">
	<![CDATA[
		UPDATE users 
			SET
		password = #{password}
			WHERE
		username = #{username}
	]]>
	
	</update>
	
	<delete id="memberDelete" parameterType="hashMap">
	<![CDATA[
		DELETE FROM 
			users
		WHERE 
			username = #{username}
	]]>
	</delete>
	
     	<select id="totalCount" resultType="hashMap">
	<![CDATA[
		SELECT COUNT(username)
			FROM
			users
	]]>
	</select>
	
		<select id="telChk" resultType="com.karlsruhe.users.UsersDTO">
	<![CDATA[
		SELECT * FROM 
			users
		WHERE
		    utel = #{utel}
	]]>
	</select>
	
		<select id="findIdUser" resultType="hashMap">
	<![CDATA[
		SELECT username from
			users
		WHERE
		    uname = #{uname} and utel = #{utel}
	]]>
	</select>
	
		<select id="findPw" resultType="hashMap">
	<![CDATA[
		SELECT * FROM 
			users
		WHERE
		    uname = #{uname} and utel = #{utel} and username = #{username}
	]]>
	</select>
	
		<select id="countUsers" resultType="hashMap">
	<![CDATA[
		SELECT count(*)
		FROM
			users
		
	]]>
	</select>
</mapper>