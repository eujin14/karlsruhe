<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardreply">
<insert id="create" parameterType="hashMap">
<![CDATA[ INSERT INTO boardreply (rwriter,rcontent) VALUES (#{rwriter}, #{rcontent}) ]]>
</insert>
<select id="readlist" resultType="hashMap">
<![CDATA[ SELECT * FROM boardreply ORDER BY rno DESC ]]>
</select>
<select id="readdetail" parameterType="String" resultType="hashMap"> 
<![CDATA[ SELECT * FROM boardreply WHERE rno = #{rno} ]]>
</select>
<update id="update" parameterType="hashMap">
<![CDATA[ UPDATE boardreply SET rwriter = #{rwriter}, rcontent = #{rcontent} WHERE rno = #{rno} ]]>
</update>
<delete id="delete" parameterType="String">
<![CDATA[ DELETE FROM boardreply WHERE rno = #{rno} ]]>
</delete>

</mapper>